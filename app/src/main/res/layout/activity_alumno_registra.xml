<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.registra.AlumnoRegistraActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idTitlePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="17dp"
        android:text="@string/txt_registro_de_alumno"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombres"
            android:layout_margin="2pt"
            android:textSize="18sp"

            />
        <EditText
            android:id="@+id/txtRegAlumnoNombres"
            android:layout_width="match_parent"
            android:layout_margin="4pt"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:layout_margin="2pt"
            android:textSize="18sp"/>
        <EditText
                android:id="@+id/txtRegAlumnoApellidos"
            android:layout_width="match_parent"
            android:layout_margin="4pt"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TelÃ©fono"
            android:layout_margin="2pt"
            android:textSize="18sp"/>/>
        <EditText
            android:id="@+id/txtRegAlumnoTelefono"
            android:layout_width="match_parent"
            android:layout_margin="4pt"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dni"
            android:layout_margin="2pt"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/txtRegAlumnoDni"
            android:layout_width="match_parent"
            android:layout_margin="4pt"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:layout_margin="2pt"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/txtRegAlumnoCorreo"
            android:layout_width="match_parent"
            android:layout_margin="4pt"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento"
            android:layout_margin="2pt"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/txtRegAlumnoFecNac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pais"
            android:layout_margin="2pt"
            android:textSize="18sp"/>
        <Spinner
            android:id="@+id/spnRegPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Registrar"

            />


    </LinearLayout>
</ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>